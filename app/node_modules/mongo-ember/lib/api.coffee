mongoose = require 'mongoose'
utils = require 'mongoose/lib/utils'
me = require './mongo-ember'
h = require './helper'


prepareRequirements = (requirement) ->
	defaultRequirement = me.settings.defaultRequirement
	requirement = requirement || {}
	#c
	requirement.c = requirement.c || defaultRequirement.c
	#r
	requirement.r = requirement.r || defaultRequirement.r
	#u
	requirement.u = requirement.u || defaultRequirement.u
	#d
	requirement.d = requirement.d || defaultRequirement.d
	return requirement

crud = (app, url, name) ->
	model = mongoose.models[name]
	cname = utils.toCollectionName name

	pf = me.settings.powerField
	requirement = prepareRequirements me.requirements[name]
	
	#c
	app.post url, (req, res) ->
		power = if req.user then req.user[pf] else me.settings.defaultPower
		if power < requirement.c
			return res.send 401, 'You do not have the required privilege to access this'

		obj = h.unwrap req.body
		obj = new model obj
		obj.save (err, result) ->
			if err
				res.send 500, err.message
			else
				res.send 201, h.wrap result, name

	#r
	#r all
	app.get url, (req, res) ->
		power = if req.user then req.user[pf] else me.settings.defaultPower
		if power < requirement.r
			return res.send 401, 'You do not have the required privilege to access this'

		model.find {}, (err, result) ->
			if err
				res.send 500, err.message
			else
				res.send 200, h.wrap result, cname
	
	#r one
	app.get url + '/:id', (req, res) ->
		power = if req.user then req.user[pf] else me.settings.defaultPower
		if power < requirement.r
			return res.send 401, 'You do not have the required privilege to access this'

		id = req.params.id
		model.findById id, (err, result) ->
			if err
				res.send 500, err.message
			else
				res.send 200, h.wrap result, name

	#u
	app.put url + '/:id', (req, res) ->
		power = if req.user then req.user[pf] else me.settings.defaultPower
		if power < requirement.u
			return res.send 401, 'You do not have the required privilege to access this'

		id = req.params.id
		obj = h.unwrap req.body
		model.findByIdAndUpdate id, obj, (err, result) ->
			if err
				res.send 500, err.message
			else
				res.send 200, h.wrap result, name

	#d
	app.delete url + '/:id', (req, res) ->
		power = if req.user then req.user[pf] else me.settings.defaultPower
		if power < requirement.d
			return res.send 401, 'You do not have the required privilege to access this'

		id = req.params.id
		#why find and remove? to make sure cascading removal hooks are called
		model.findById id, (err, result) ->
			if err
				res.send 500, err.message
			else if !result?
				res.send 500, 'No matching item to delete'
			else
				result.remove (err, result) ->
					if err
						res.send 500, err.message
					else
						res.send 204




api = module.exports =
	bind: (app) ->
		root = '/' + (me.settings.namespace || '')	
		models = mongoose.models
		for name of models
			model = models[name]
			cname = utils.toCollectionName name
			url = root + '/' + cname
			crud app, url, name
			
		return